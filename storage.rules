rules_version = '2';

// Firebase Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read/write their own files
    match /quickNotes/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read/write files in general quickNotes folder
    // (for backward compatibility with existing uploads)
    // Also allow public read access for shared content
    match /quickNotes/{allPaths=**} {
      allow read: if true; // Public read for sharing
      allow write: if request.auth != null; // Only authenticated users can upload
    }
    
    // Allow public read access to files that have been explicitly shared
    // This requires a specific naming convention for public files
    match /publicShares/{shareId}/{allPaths=**} {
      allow read: if true; // Public read access
      allow write: if request.auth != null; // Only authenticated users can upload
    }
    
    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
